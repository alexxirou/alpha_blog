<nav class="navbar navbar-expand-lg navbar  p-3">
  <%= link_to "ALPHA BLOG", root_path, class: "navbar-brand", id: "logo" %>
  <button class="navbar-toggler bg-light" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon" ></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
      <li class="nav-item">
        <%= link_to "Bloggers", users_path, class: "nav-link" %>
      </li>
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownArticles" role="button" data-bs-toggle="dropdown" aria-expanded="false">
          Articles
        </a>
        <ul class="dropdown-menu" aria-labelledby="navbarDropdownArticles">
          <% if logged_in? %>
            <%= link_to "Create new article", new_article_path, class: "dropdown-item" %>
          <% end %>  
          <%= link_to "View articles", articles_path, class: "dropdown-item" %>
        </ul>
      </li>
       <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Categories
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          <% if logged_in? && current_user.admin? %>
            <%= link_to "Create new category", new_category_path, class: "dropdown-item" %>
          <% end %>  
          <%= link_to "View categories", categories_path, class: "dropdown-item" %>
        </div>
      </li>
    </ul>
    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
      <li class="nav-item dropdown">
        <% if logged_in? %>
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownProfile" role="button" data-bs-toggle="dropdown" aria-expanded="false">
          <%= "(Admin)" if current_user.admin? %> Profile [<%= current_user.username %>]
        </a>
        <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownProfile">
          <%= link_to "View your profile", user_path(current_user), class: "dropdown-item" %>
          <%= link_to "Edit your profile", edit_user_path(current_user), class: "dropdown-item" %>
          <%= link_to "Delete profile", user_path(current_user), class: "dropdown-item text-danger", method: :delete, data: { confirm: "Are you sure?" } %> 
        </div>
      </li>
     
      <li class="nav-item">
        <%= link_to 'Logout', logout_path, method: :delete, class: "nav-link" %>

      </li>
      <% else %>
      <li class="nav-item">
        <%= link_to 'Log in', login_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to 'Sign up', signup_path, class: "nav-link" %>
      </li>
      <% end %>
    </ul>
  </div>
</nav>
